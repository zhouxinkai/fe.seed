{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "module": "commonjs",
    "removeComments": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "target": "ES6",
    "lib": [
      "dom.iterable",
      "scripthost",
      "es2017"
    ],
    "typeRoots": [
      "../declarations/",
      "../../node_modules/@types/"
    ],
    "outDir": "../../dist",
    "experimentalDecorators": true
  },
  "include": [
    "./**/*"
  ]
}
